  <div class="col-3">
    <%= link_to image_tag("back.jfif", height:'13', width:'18' ), :back %>
  </div>
  <div class="col-6 text-center">
    <h1 class="ml-auto mr-auto mt-1 branding main my-auto">mvmt.bio</h1>
