<%= render 'layouts/navbar_registration' %>

<div class="container text-center">
  <div class="row mb-5">
    <div class="col-2"></div>
    <div class="col-8">
      <h1 class="mb-5 auth">forgot password</h1>
      <%= flash[:notice] %>
      <%= flash[:alert] %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group text-right mt-1">
          <%= link_to "Remember Password?", new_user_session_url %>
        </div>

        <div class="form-group mt-3">
          <p>Don't have an account? <%= link_to "Sign Up", new_user_registration_url %></p>
        </div>

        <div class="actions">
          <%= f.submit "Send Verificaiton Link", class: "btn btn-info btn-block" %>
        </div>
      <% end %>
    </div>
    <div class="col-2"></div>
  </div>
</div>
