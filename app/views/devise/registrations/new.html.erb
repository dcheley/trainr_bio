<%= render 'layouts/navbar_registration' %>

<div class="container text-center">
  <div class="row mt-5 mb-5">
    <div class="col-2"></div>
    <div class="col-8">
      <p class="mb-5 auth">Sign Up</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <p>Please use your Gmail.</p>

        <div class="row">
          <div class="col-12">
            <div class="form-group">
              <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="form-group">
              <%= f.password_field :password, placeholder: "Password", autocomplete: "off", required: true, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="form-group">
              <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "form-control", autocomplete: "off" %>
            </div>

        <!-- <div class="row">
          <div class="col-12">
            <div class="form-group">
              <%# <%= f.label 'I am an trainer.' %>
              <%# <%= f.check_box :role %>
            </div>
          </div>
        </div> -->

        <div class="row">
          <div class="col-12">
            <%= f.submit "Next", class: 'btn btn-primary btn-block' %>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="form-group mt-3">
              <p>Already have an account? <%= link_to "Log In", new_user_session_url %></p>
            </div>
          </div>
        </div>
      <% end %>

      <%# <%= render "devise/shared/links" %>
    </div>
    <div class="col-2"></div>
  </div>
</div>
