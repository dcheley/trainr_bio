<%= render 'layouts/navbar_registration' %>

<div class="container text-center">
  <div class="row mb-5">
    <div class="col-2"></div>
    <div class="col-8">
      <p class="mb-5 auth">Log In</p>
      <%= flash[:notice] %>
      <%= flash[:alert] %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mt-3">
        <%= f.email_field :email, placeholder: 'Email', class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: 'Password', class: "form-control", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <!-- <div class="form-group"> -->
          <%# <%= f.check_box :remember_me %>
          <%# <%= f.label :remember_me %>
        <!-- </div> -->
      <% end -%>

      <div class="actions">
        <div class="form-group text-right">
          <%= link_to "Forgot Password?", new_password_url(:user) %>
        </div>
        <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="form-group mt-3">
      <p>Don't have an account? <%= link_to "Sign Up", new_user_registration_url %></p>
    </div>

    <div class="col-2"></div>
  </div>
</div>
