<%= render 'layouts/navbar' %>

<!-- for each event on actuve day -->
<div class="row">
  <div class="col-2">
    <div class="row">
      <div class="col-4"></div>
      <div class="col-4">
        <%= image_tag("images/recurring.svg", class: "icon-recurring") %>
      </div>
      <div class="col-4"></div>
    </div>
  </div>
  <div class="col-2">
    <p>
      <%= @event.time %>
      <br/> <%= @event.duration %>
    </p>
  </div>
  <div class="col-1"></div>
  <div class="col-3">
    <p><%= @event.title %></p>
  </div>
  <div class="col-1"></div>
  <div class="col-2">
    <p><%= @event.location %></p>
  </div>
  <div class="col-1"></div>
</div>

<%= link_to "Add a Class", new,  class: "btn btn-primary mt-5 mb-5" %>
