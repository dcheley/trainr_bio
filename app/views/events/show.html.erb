<%= render 'layouts/navbar' %>
<!-- secondary navbar, schedule active -->

<!-- timerange selector -->

<div class="container text-center"><%= flash[:notice] %></div>
<!-- display timerange schedule -->
<div class="container">
  <% @user.events.first(10)each_with_index do |event, i| %>
    <% if event[i].date != event[i-1].date %>
      <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
          <!-- display event.date -->
        </div>
        <div class="col-1"></div>
      </div>
    <% end %>
    <div class="row text-center">
      <div class="col-2"></div>
      <div class="col-8">
        <!-- display events for that date -->
      </div>
      <div class="col-2"></div>
    </div>
  <% end %>
  <!-- export timerange schedule -->
</div>

<% if current_user && current_user.role == "trainer" %>
	<%= render 'layouts/footer_trainer' %>
<% else %>
	<%= render 'layouts/footer_trainee' %>
<% end %>
