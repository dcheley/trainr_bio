        <% end %>
      </div>
      <div class="col">
        <%= link_to manage_users_url, class: "footer-link" do %>
          <%= image_tag("gear.svg", width: "8", height: "8") %>
          <p class="mt-1 mb-1">Users</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to admin_url, class: "footer-link" do %>
          <%= image_tag("gear.svg", width: "8", height: "8") %>
          <p class="mt-1 mb-1">Admin</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to user_url(current_user), class: "footer-link" do %>
          <%= image_tag("finger-print.svg", width: "8", height: "8") %>
          <p class="mt-1 mb-1">Profile</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="col">
  <%= link_to user_my_trainers_url(current_user), class: "footer-link" do %>
    <%= image_tag("speed.svg", width: "18", height: "18") %>
