<div class="bg-light fixed-bottom">
  <div class="container">
    <div class="row">
      <div class="col">
        <%= link_to home_url, class: "footer-link" do %>
          <%= image_tag("home.svg", width: "18", height: "18") %>
          <p class="mt-1 mb-1">Home</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to new_studio_url, class: "footer-link" do %>
          <%= image_tag("plus.svg", width: "8", height: "8") %>
          <p class="mt-1 mb-1">+Studio</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to practice_categories_url, class: "footer-link" do %>
          <%= image_tag("gear.svg", width: "8", height: "8") %>
          <p class="mt-1 mb-1">Practices</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to specialty_categories_url, class: "footer-link" do %>
          <%= image_tag("gear.svg", width: "8", height: "8") %>
          <p class="mt-1 mb-1">Specialties</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to manage_studios_url, class: "footer-link" do %>
          <%= image_tag("gear.svg", width: "8", height: "8") %>
