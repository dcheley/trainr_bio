<div class="bg-light fixed-bottom" id="trainer-footer">
  <div class="container my-auto">
    <div class="row">
      <div class="col">
        <%= link_to home_url, class: "footer-link" do %>
          <%= image_tag("home.svg", width: "18", height: "18") %>
          <p class="mt-1 mb-1">Home</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to search_url, class: "footer-link" do %>
          <%= image_tag("search.svg", width: "18", height: "18") %>
          <p class="mt-1 mb-1">Search</p>
        <% end %>
      </div>
      <div class="col">
        <%= link_to edit_user_url(current_user), class: "footer-link" do %>
          <%= image_tag("finger-print.svg", width: "18", height: "18") %>
          <p class="mt-1 mb-1">Profile</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
