<div class="row my-3">
  <div class="col-12">
    <%= form_tag(users_url, method: "get", id: "search", class:"form-inline my-2 my-lg-0") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search by name or studio", required: true, class: "form-control mr-sm-2 ml-auto", style: "width: 200px;" %>
      <%= submit_tag "Go", class:"btn btn-outline-success my-2 my-sm-0 mr-auto" %>
    <% end %>
  </div>
</div>
