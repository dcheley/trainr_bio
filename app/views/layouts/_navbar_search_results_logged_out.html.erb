<div class="container text-center">
  <div class="row my-3">
    <div class="col-2">
      <%= link_to home_url, class: "footer-link" do %>
        <%= image_tag("home.svg", width: "21", height: "21", class: "ml-3") %>
      <% end %>
    </div>
    <div class="col-10 mt-1">
      <%= form_tag(users_url, method: "get", id: "search") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Name or Studio", required: true, class: "ml-1" %>
        <%= submit_tag "Go", class:"btn btn-outline-success btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
