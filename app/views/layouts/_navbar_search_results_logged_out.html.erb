<div class="container text-center">
  <div class="row my-3">
    <div class="col-2">
      <%= link_to home_url, class: "footer-link" do %>
        <%= image_tag("location.png", width: "18", height: "18") %>
        <p class="mt-1 mb-1">Home</p>
      <% end %>
    </div>
    <div class="col-10">
      <%= form_tag(users_url, method: "get", id: "search") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search name or studio", required: true %>
        <%= submit_tag "Go", class:"btn btn-outline-success btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
