<%= render 'layouts/navbar' %>
<!-- secondary navbar, offerings active -->

<div class="container text-center"><%= flash[:notice] %></div>

<div class="container">
  <% @user.offerings.each do |offering| %>
    <div class="row text-center">
      <div class="col-12">
        <figure>
          <%= link_to image_tag(offering.img_url, class: "offering-pic"), offering.url %>
          <figcaption>offering.title</figcaption>
        </figure>
      </div>
    </div>
  <% end %>
</div>

<% if current_user && current_user.role == "trainer" %>
	<%= render 'layouts/footer_trainer' %>
<% else %>
	<%= render 'layouts/footer_trainee' %>
<% end %>
