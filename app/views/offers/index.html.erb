<% if !current_user %>
  <%= render 'layouts/logged_out' %>
<% else %>
  <%= render 'layouts/navbar_profile' %>
  <%= render 'layouts/navbar_secondary' %>

  <div class="container text-center">
    <div class="row mt-3 mb-2">
      <div class="col-12">
        <% if current_user && current_user == @user %>
          <%= link_to "+ Add New Offering", new_offer_url,  class: "btn btn-dark btn-block" %>
        <% end %>
      </div>
    </div>

    <% if @offers.empty? %>
      <div class="row mt-4 mb-4">
        <div class="col-2"></div>
        <div class="col-8"><span class="schedule date"> No offers to show. </span></div>
        <div class="col-2"></div>
      </div>
    <% else %>
      <% @offers.each do |offer| %>
        <figure style="border-style: solid;">
          <div class="row">
            <div class="col-12">
              <% if offer.avatar.attachment.nil? %>
                <%= link_to image_tag("cover.jpg", class: "offer-pic btn-block"), offer_url(offer) %>
              <% else %>
                <%= link_to image_tag(offer.avatar.service_url, class: "offer-pic btn-block"), offer_url(offer) %>
              <% end %>
            </div>
          </div>
          <figcaption>
            <div class="row">
              <div class="col-2">
                <% if current_user && current_user == @user %>
                  <% if offer.status == 1 %>
                    <%= image_tag('private.svg', height: 11, width: 11, class:'') %>
                  <% end %>
                <% end %>
              </div>
              <div class="col-8"><%= offer.title %></div>
              <div class="col-2">
                <% if current_user && current_user == @user %>
                  <%= link_to image_tag('edit.png', height: 11, width: 11, class:''), edit_offer_url(offer) %>
                <% end %>
              </div>
            </div>
          </figcaption>
        </figure>
        <br/>
      <% end %>
    <% end %>
  </div>

  <% if current_user.role == 0 %>
    <%= render 'layouts/footer_trainee' %>
  <% elsif current_user.role == 1 %>
    <%= render 'layouts/footer_trainer' %>
  <% end %>
<% end %>
