        <div class="row">
          <div class="col-12">
            <h2> Location </h2>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-12">
            <p> <%= offer.location %> </p>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    </div>
  <% end %>

  <% if !offer.cost.empty? %> <!-- if it exists/isTrue (if it contains valuable data instead of loose pointer)-->
