<%= render 'layouts/navbar' %>

<div class="container">
  <div class="row text-center">
    <div class="col-12">
      <!-- change below to "image_tag(offer.cover_img_url, class: "offering-pic")"  -->
      <%= image_tag('cover.jpg', height: 31.5, width: 85, class:'') %>
    </div>
  </div>
</div>

<hr>

<div class="container">

  <div class="row text-center">
    <div class="col-1"></div>
    <div class="col-10">
      <h2> <%= offer.title %> </h2>
