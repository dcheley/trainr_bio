        <div class="row text-center">
          <div class="col-12">
            <p> <%= offer.other %> </p>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    </div>
  <% end %>

  <%= link_to "Contact & Book", booking_url,  class: "btn btn-secondary mt-5 mb-5" %>
</div>

<% if current_user && current_user.role == 1 %>
	<%= render 'layouts/footer_trainer' %>
<% else %>
	<%= render 'layouts/footer_trainee' %>
<% end %>
