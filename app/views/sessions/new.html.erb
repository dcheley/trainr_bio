<div class="container">
  <h1>Login</h1>

  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <%= submit_tag "submit", class: "btn submit" %>
  <% end %>
</div>
