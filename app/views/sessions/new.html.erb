<div class="container">
  <h1>Login</h1>

  <%= form_tag login_path do %>
    <div class="form-group">
      <%= text_field_tag :email, params[:email], placeholder: 'Email', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, placholder: 'Password', class: "form-control" %>
    </div>
    <%= submit_tag "submit", class: "btn submit" %>
  <% end %>
</div>
