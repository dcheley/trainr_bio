<%= render 'layouts/navbar_registration' %>

<div class="container text-center">
  <div class="row mb-5">
    <div class="col-2"></div>
    <div class="col-8">
      <h1 class="mb-5 auth">log in</h1>
      <%= flash[:notice] %>
      <%= flash[:alert] %>

      <%= form_tag new_user_session_url do %>
        <div class="form-group mt-3">
          <%= text_field_tag :email, params[:email], placeholder: 'Email', class: "form-control" %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, placeholder: 'Password', class:'form-control' %>
        </div>
        <div class="form-group text-right">
          <%= link_to "Forgot Password?", :forgot_password %>
        </div>
          <%= submit_tag "Log In", class: "btn btn-primary btn-block" %>
        <div class="form-group mt-3">
          <p>Don't have an account? <%= link_to "Sign Up", new_user_url %></p>
        </div>
      <% end %>
    </div>
    <div class="col-2"></div>
  </div>
</div>
