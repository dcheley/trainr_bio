<div class="container text-center">
  <div class="row mt-5 mb-5">
    <div class="col-1"></div>
    <div class="col-10">
      <%= form_for(@specialty) do |f| %>
        <% if @specialty.errors.any? %>
          <div id="error_explanation">
            <h5><%= pluralize(@specialty.errors.count, "error") %> prohibited change!</h5>
            <ul>
            <% @specialty.errors.full_messages.each do |msg| %>
              <li class="error"><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Specialty name", class: "no-border color-bottom-border", required: true %>
        <%= f.submit "Save", class: "btn btn-info" %>
      <% end %>
    <div class="col-1"></div>
  </div>
</div>

<%= render 'layouts/footer_trainer' %>
