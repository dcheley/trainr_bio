<%= render 'layouts/navbar_studio_profile' %>

<div class="container text-center">
  <%= flash[:notice] %>

  <div class="row">
    <div class="col-12">
      <h1><%= @studio.name %></h1>
      <p><%= @studio.location %></p>

      <!-- Show schedule times and days only if exist and gray out button if not -->
      <div class="buttons">
        <%= link_to image_tag('calendar.svg', class:'icon-link'), edit_studio_url(@studio) %>
      </div>

      <div class="color-bottom-border mt-3"></div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <h1 class="text-center">Instructors</h1>
    </div>

    <% if !@studio.trainer_studios.empty? %>
      <% @studio.trainer_studios.each_with_index do |trainr| %>
        <div class="col-4">
          <%= image_tag(trainr.img_url, class: "profile-pic-md") %>

          <p class=""><%= trainr.firstname %></p>
          <p class=""><%= trainr.lastname %></p>
        </div>
      <% end %>
    <% else %>
      <div class="col-12">
        <p class="">No instructors found.</p>
      </div>
    <% end %>

    <div class="col-12">
      <div class="color-bottom-border mt-3"></div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <h1>Location</h1>
      <p>Loading ...</p>
      <p>Could not find your location on the map, please send us an email so we can add it</p>
    </div>
  </div>

  <% if current_user && current_user.role == 1 %>
  	<%= render 'layouts/footer_trainer' %>
  <% elsif current_user && current_user.role == 0 %>
  	<%= render 'layouts/footer_trainee' %>
  <% end %>
</div>
