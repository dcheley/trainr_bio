<%= render 'layouts/navbar_edit' %>
<!-- < Settings (edit trainr profile) -->
<div class="container my-3">
  <%= form_for(@user, url: { action: "update" }) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h5><%= pluralize(@user.errors.count, "error") %> prohibited change!</h5>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li class="error"><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-4">
        <div class="row mb-2">
          <% if @user.avatar.attachment.nil? %>
            <%= image_tag('user.svg', class:'btn-block')%>
          <% else %>
            <%= image_tag(@user.avatar.service_url, class:'btn-block')%>
          <% end %>
        </div>
      </div>
      <div class="col-8">
        <div class="row">
          <div class="col-2">
            <p>First</p>
          </div>
          <div class="col-8">
            <div>
              <%= f.text_field :first_name, placeholder: "First Name", required: true, class: "btn-block no-border grey-bottom-border " %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            <p>Last</p>
          </div>
          <div class="col-8">
            <%= f.text_field :last_name, placeholder: "Last Name", required: true, class: "btn-block no-border grey-bottom-border " %>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            <p>URL</p>
          </div>
          <div class="col-8">
            <%= f.text_field :username, placeholder: "trainr.bio/jamesjun", required: true, class: "btn-block no-border grey-bottom-border" %>
          </div>
        </div>
      </div>
    </div>

    <hr>

    <div class="row mb-2">
      <div class="col-12"><p>About Me</p></div>
    </div>
    <div class="row mb-2">
      <div class="col-12"><%= f.text_area :description, placeholder: "Max 150 characters. Try tagging studios.", rows: 5, class: "btn-block", required: true %></div>
    </div>

    <hr>

    <div class="row mb-3">
      <div class="col-12">
        <h3>Social Links</h3>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">
         <p>Instagram</p>
      </div>
      <div class="col-9">
        <button class="btn btn-primary btn-sm" style="font-size: 9px;border-radius: 18px;"><i class="fa fa-instagram" aria-hidden="true"></i> Connect with Instagram</button>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">
        <p>Website</p>
      </div>
      <div class="col-9">
        <%= f.text_field :website_url, placeholder: "movewithjames.co", class: "no-border grey-bottom-border" %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <p> Email </p>
      </div>
      <div class="col-9">
        <%= f.email_field :email, placeholder: "movewithjames@gmail.com", required: true, class: "no-border grey-bottom-border" %>
      </div>
    </div>

    <hr>

    <div class="row mb-3">
      <div class="col-3">
         <p>Phone</p>
       </div>
       <div class="col-9">
         <%= f.text_field :phone, placeholder: "647-809-3891", class: "no-border grey-bottom-border" %>
       </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">
        <p>City/Region</p>
      </div>
      <div class="col-9">
        <%= f.text_field :location, placeholder: "Location", class: "no-border grey-bottom-border", id: :autocomplete_address  %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">
        <p>Upload Image</p>
      </div>
      <div class="col-9">
        <%= f.file_field :avatar, class: "btn-sm" %>
      </div>
    </div>

    <div class="row">
      <div class="col"></div>
      <div class="col-3">
        <%= f.submit 'Save', class: 'btn btn-secondary' %>
      </div>
      <div class="col-8"></div>
    </div>
  <% end %>
</div>

<%= javascript_include_tag 'autocomplete', 'data-turbolinks-track': 'reload' %>
