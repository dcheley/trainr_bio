<% if !current_user %>
  <%= render 'layouts/navbar_home_logged_out' %>

  <div class="container text-center">
    <%= flash[:notice] %>
    <%= flash[:alert] %>

    <div class="row mb-4">
      <div class="col-12">
        <!-- Phone image with scroll displaying app -->
        <p>Own your profile. In minutes. For Free.</p>
        <%= image_tag("example.png", width: 175, height: 350)%>
      </div>
    </div>
    <div class="row mt-5 mb-5">
      <div class="col-12">
        <%= form_tag(users_url, method: "get", id: "search", class:"form-inline my-2 my-lg-0") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search by name or studio", required: true, class: "form-control mr-sm-2 ml-auto", style: "width: 325px;" %>
          <%= submit_tag "Go", class:"btn btn-outline-success my-2 my-sm-0 mr-auto" %>
        <% end %>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-4"></div>
      <div class="col-4">
        <%= link_to "Sign Up", new_user_registration_url, class:'btn btn-primary btn-block round-btn' %>
      </div>
      <div class="col-4"></div>
    </div>
    <div class="row mb-4">
      <div class="col-4"></div>
      <div class="col-4">
        <%= link_to "Log In", new_user_session_url, class:'btn btn-outline-primary btn-block round-btn' %>
      </div>
      <div class="col-4"></div>
    </div>
    <div class="row mb-5">
      <div class="col-12">
        <p>trainr.bio 2020</p>
      </div>
    </div>
    <!-- Use a better way to stop footer overlapping content later -->
    <div style="height: 150px;"></div>
  </div>
<% else %>
  <%= render 'layouts/navbar_home_logged_in.html.erb' %>

  <div class="container text-center">
    <%= flash[:notice] %>

    <div class="row mb-5">
      <div class="col-12">
        <%= form_tag(users_url, method: "get", id: "search", class:"form-inline my-2 my-lg-0") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search by name or studio", required: true, class: "form-control mr-sm-2 ml-auto", style: "width: 350px;" %>
          <%= submit_tag "Go", class:"btn btn-outline-success my-2 my-sm-0 mr-auto" %>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-3"></div>
      <div class="col-6">
        <%= form_tag :landing_email do %>
          <div class="form-group">
            <textarea class="form-control" placeholder="Write anything." rows="5" name="comment"></textarea>
          </div>
          <%= submit_tag "Send", class:'btn btn-outline-primary' %>
        <% end %>
      </div>
      <div class="col-3"></div>
    </div>
    <div class="row mb-3">
      <div class="col-12">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-12">
        <p>trainr.bio 2020</p>
      </div>
    </div>
  </div>

  <% if current_user.role == 0 %>
    <%= render 'layouts/footer_trainee' %>
  <% elsif current_user.role == 1 %>
    <%= render 'layouts/footer_trainer' %>
  <% end %>
<% end %>
