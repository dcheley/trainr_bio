<%= render 'layouts/navbar' %>

<div class="container text-center"><%= flash[:notice] %></div>

<div class="container">
  <div class="row text-center">
    <div class="col-1"></div>
    <div class="col-1">
      <!-- checkins -->
    </div>
    <div class="col-1"></div>
    <div class="col-1">
      <!-- pic -->
    </div>
    <div class="col-1"></div>
    <div class="col-4">
      <!-- name, location -->
    </div>
    <div class="col-1"></div>
    <div class="col-1">
      <!-- star -->
    </div>
    <div class="col-1"></div>
  </div>
</div>

<div class="container">
  <div class="row text-center">
    <% %>
    <% @user.trainers.each do |trainr| %>
      <div class="col-1"></div>
      <div class="col-10">
        <div class="row text-center card-my-trainr">
          <div class="col-1">
            <!-- checkins -->
          </div>
          <div class="col-1"></div>
          <div class="col-2">
            <%= link_to image_tag(trainr.avatar.service_url, class: "my-trainr-pic"), user_url(trainr) %>
          </div>
          <div class="col-1"></div>
          <div class="col-5">
            <%= trainr.first_name %><%= trainr.last_name %>
            <br/><%= trainr.location %>
          </div>
          <div class="col-1"></div>
          <div class="col-1">
            <%= image_tag("left-arrow.png", class: "star-icon", height: 32, width: 32) %>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    <% end %>
  </div>
</div>


<% if current_user && current_user.role == 1 %>
	<%= render 'layouts/footer_trainer' %>
<% else %>
	<%= render 'layouts/footer_trainee' %>
<% end %>
