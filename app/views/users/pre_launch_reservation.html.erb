<div class="container text-center">
  <div class="row mt-5 mb-5">
    <div class="col-1"></div>
    <div class="col-10">
      <%= render 'layouts/navbar_home_logged_out' %>

      <p class="text-primary mb-3"><%= flash[:notice] %></p>
      <p class="text-primary mb-3"><%= flash[:alert] %></p>

      <p class="mt-2">
        Your trainr URL is reserved! </p>
      <p class="mt-2">
        Please stay tuned for our launch email. <br/>
      (coming spring 2020) </p>

      <br\>
      <div class="mt-5">
        <%= link_to image_tag("instagram.svg", height:'33', width:'33' ), "https://instagram.com/trainr.bio" %>
      </div>

      <p class="mt-5">Have a comment or question?</p>

      <%= form_tag :landing_email do %>
        <div class="form-group">
          <textarea class="form-control rounded-0 ml-auto mr-auto" placeholder="" rows="2" name="comment"></textarea>
        </div>
        <%= submit_tag "Send", class:'btn btn-dark mb-3 mx-3' %>
      <% end %>

      <p class="branding footer mt-5 mx-5">trainr.bio 2020</p>
    </div>
    <div class="col-1"></div>
  </div>
</div>
