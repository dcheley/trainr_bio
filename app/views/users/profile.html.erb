<% if !current_user %>
  <%= render 'layouts/logged_out' %>
<% else %>
  <%= render 'layouts/navbar_profile' %>
  <%= render 'layouts/navbar_secondary' %>
  <!-- to make tabs work the way shown below, we may need to render the other tabs as partials  -->

  <div class="container text-center"><%= flash[:notice] %></div>
  <!-- <div class="tab-content clearfix">
    <div class="tab-pane active mb-4" id="profile" role="tabpanel" aria-labelledby="profile-tab"> -->
      <div class="container">
        <div class="row">
          <div class="col-12">
            <!-- change below to "image_tag(@user.cover_img_url, class: "offer-pic")"  -->
            <%= image_tag('cover.jpg', height: 63, width: 170, class:'') %>
          </div>
        </div>
      </div>
      <div class="container text-center">
        <div class="row">
          <div class="col-1"></div>
          <div class="col-6">
            <!-- change below to "image_tag(@user.profile_img_url, class: "profile-pic")"  -->
            <%= image_tag('cover.jpg', height: 31.5, width: 85, class:'') %>
          </div>
          <div class="col-1"></div>
          <div class="col-3">
            <div class="row"><% @user.first_name %></div>
            <div class="row"><% @user.last_name %></div>
            <div class="row"><% @user.headline %></div>
            <div class="row">üè†<% @user.location %></div>
            <div class="row">
              <div class="col-6"><%= link_to "‚òÜ", new_user_registration_url,  class: "btn btn-dark btn-sm btn-block" %></div>
              <div class="col-6"><%= link_to "üîó", new_user_registration_url,  class: "btn btn-dark btn-sm  btn-block" %></div>
            </div>
          </div>
          <div class="col-1"></div>
        </div>

        <hr>

        <div class="row">
          <div class="col-1"></div>
          <div class="col-10"><p><% @user.description %></p></div>
          <div class="col-1"></div>
        </div>

        <hr>

        <div class="row">
          <div class="col-1"></div>
          <div class="col-10">
            <h4> Upcoming </h4>
              <% if @events.empty?  %>
                <div class="row text-center mt-4 mb-4">
                  <div class="col"></div>
                  <div class="col"><span class="schedule date"> No classes this week </span></div>
                  <div class="col"></div>
                </div>
              <% else %>
                <% $previous_date = 0 %>
                <% @events.each do |event| %>
                    <% if event.date != @previous_date %>
                      <div class="row mt-4">
                        <div class="col">
                          <span class="schedule date"><%= event.date.strftime('%a %_m/%-d') %><br/></span>
                        </div>
                      </div>
                      <% @previous_date = event.date %>
                    <% end %>
                    <div class="row text-center">
                      <div class="col-1"></div>
                      <div class="col"><span class="schedule time"><%= event.start_time.strftime('%l:%M%p') %></span></div>
                      <div class="col"><span class="schedule session-name"><%= event.title %></span></div>
                      <div class="col"><span class="schedule studio-name"><%= event.location %></span></div>
                      <div class="col-1"></div>
                    </div>
                <% end %>
              <% end %>
          </div>
          <div class="col-1"></div>
        </div>

        <hr>

        <div class="row">
          <div class="col-1"></div>
          <div class="col-10">
            <div class="row">
              <div class="col-2"></div>
              <div class="col-7">
                <%= link_to "Leave Comment", new_user_registration_url,  class: "btn btn-primary mt-5 mb-5" %>
              </div>
              <div class="col-2">
                <%= image_tag("pray.jfif", height: 11, width: 11, class:'') %>
              </div>
              <div class="col-1"></div>
            </div>
            <hr>
            <div class="row">
              <div class="col-1"></div>
              <div class="col-10">
                <!-- comments -->
              </div>
              <div class="col-1"></div>
            </div>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4">
                <!-- see more -->
              </div>
              <div class="col-4"></div>
            </div>
          </div>
          <div class="col-1"></div>
        </div>
      </div>
    <!-- </div>
  </div> -->

  <% if current_user && current_user.role == 1 %>
  	<%= render 'layouts/footer_trainer' %>
  <% else %>
  	<%= render 'layouts/footer_trainee' %>
  <% end %>
<% end %>
