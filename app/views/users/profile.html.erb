<% if !current_user %>
  <%= render 'layouts/logged_out' %>
<% else %>
  <%= render 'layouts/navbar_profile' %>
  <%= render 'layouts/navbar_secondary' %>

  <div class="container text-center">
    <div class="row mt-1 mb-1">
      <div class="col-12">
        <% if current_user == @user %>
          <%= link_to "Edit User Profile", edit_user_url(current_user),  class: "btn btn-dark btn-block" %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- <div class="container text-center">
    <div class="row">
      <div class="col-12"> -->
        <!-- change below to "image_tag(@user.cover_img_url, class: "offer-pic", height: 84, width: 226.7)"  -->
        <%= image_tag('cover.jpg', class:'btn-block') %>
      <!-- </div>
    </div>
  </div> -->

  <div class="container">
    <div class="row text-center ">
      <div class="col-5">
        <!-- change below to "image_tag(@user.profile_img_url, class: "profile-pic")"  -->
        <%= image_tag('profile.png', height: 111, width: 111, class:'') %>
      </div>
      <div class="col-1"></div>
      <div class="col-5">
        <div class="row user-name mt-3"><p><% @user.first_name %></p></div>
        <div class="row user-name"><p><% @user.last_name %></p></div>
        <div class="row user-headline mt-2"><p><% @user.headline %></p></div>
        <div class="row user-location"><p>üè†<% @user.location %></p></div>
      </div>
    </div>
    <div class="row mt-2">
      <div class="col-5"><%= link_to "star", new_user_registration_url,  class: "btn btn-dark btn-sm btn-block" %></div>
      <div class="col-2"></div>
      <div class="col-5"><%= link_to "link", new_user_registration_url,  class: "btn btn-dark btn-sm btn-block" %></div>
    </div>

    <hr>

    <div class="row text-center">
      <div class="col-1"></div>
      <div class="col-10"><p>description: <% @user.description %></p></div>
      <div class="col-1"></div>
    </div>

    <hr>

    <div class="row text-center">
      <div class="col-12"><p>Upcoming</p></div>
    </div>
    <div class="row text-center">
      <div class="col-8"></div>
      <div class="col-4 text-right"><u><%= link_to "Full Schedule", user_events_url(@user),  class: "footer-link" %></u></div>
    </div>
    <% if @events.empty?  %>
      <div class="row text-center mt-3 mb-3">
        <div class="col"></div>
        <div class="col"><span class="schedule date"> No classes this week </span></div>
        <div class="col"></div>
      </div>
    <% else %>
      <% $previous_date = 0 %>
      <% @events.each do |event| %>
          <% if event.date != @previous_date %>
            <div class="row mt-1">
              <div class="col">
                <span class="schedule date"><%= event.date.strftime('%a %_m/%-d') %><br/></span>
              </div>
            </div>
            <% @previous_date = event.date %>
          <% end %>
          <div class="row">
            <div class="col-4 text-center"><span class="schedule time"><%= event.start_time.strftime('%l:%M%p') %></span></div>
            <div class="col-4 text-center"><span class="schedule session-name"><%= event.title %></span></div>
            <div class="col-4 text-right"><span class="schedule studio-name"><%= event.location %></span></div>
          </div>
      <% end %>
    <% end %>

    <hr>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-6">
        <%= link_to "Leave Comment", new_user_registration_url,  class: "btn btn-primary btn-sm btn-block" %>
      </div>
      <div class="col-1"></div>
      <div class="col-2">
        <%= image_tag("pray.jfif", height: 22, width: 22, class:'') %>
      </div>
      <div class="col-1"></div>
    </div>

  </div>

  <% if current_user && current_user.role == 1 %>
  	<%= render 'layouts/footer_trainer' %>
  <% else %>
  	<%= render 'layouts/footer_trainee' %>
  <% end %>
<% end %>
