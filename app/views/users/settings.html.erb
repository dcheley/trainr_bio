<%= render 'layouts/navbar_edit' %>
<!-- < Settings (edit basic profile) -->
<div class="container my-5">

  <%= form_for(@user, url: { action: "update" }) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h5><%= pluralize(@user.errors.count, "error") %> prohibited change!</h5>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="error"><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-4"></div>
      <div class="col-4">
        <img src="http://icons.iconarchive.com/icons/paomedia/small-n-flat/96/profile-icon.png" alt=""></img>
      </div>
      <div class="col-4"></div>
    </div>

    <div class="row">
      <div class="col-9">
        <div class="row mb-3">
          <div class="col-1"></div>
          <div class="form-group">
            <div class="col-3">
              <h6> First Name </h6>
            </div>
            <div class="col-7">
              <div>
                <%= f.text_field :firstname, placeholder: "Royal", required: true, class: "form-control no-border color-bottom-border " %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-3"></div>
    </div>

    <hr>

    <div class="row mb-3">
      <div class="col"></div>
      <div class="col-11">
        <h5> Private Information </h5>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col"></div>
      <div class="form-group">
        <div class="col-2">
           <h6> Last Name </h6>
         </div>
         <div class="col-8">
           <%= f.text_field :lastname, placeholder: "Doe", class: "form-control no-border color-bottom-border" %>
         </div>
        </div>
       <div class="col"></div>
    </div>

    <div class="row mb-3">
      <div class="col"></div>
      <div class="form-group">
        <div class="col-3">
           <h6> Phone # </h6>
         </div>
         <div class="col-7">
           <%= f.text_field :phone, placeholder: "647-xxx-xxxx", class: "form-control no-border color-bottom-border" %>
         </div>
        </div>
       <div class="col"></div>
    </div>

    <div class="row mb-3">
      <div class="col"></div>
      <div class="form-group">
        <div class="col-2">
           <h6> Email </h6>
         </div>
         <div class="col-8">
           <%= f.text_field :email, placeholder: "example@gmail.com", class: "form-control no-border color-bottom-border" %>
         </div>
        </div>
       <div class="col"></div>
    </div>

    <div class="row mb-3">
      <div class="col"></div>
      <div class="form-group">
        <div class="col-2">
         <h6> City/Region </h6>
       </div>
       <div class="col-8">
         <%= f.text_field :location, placeholder: "Location", class: "form-control no-border color-bottom-border"  %>
       </div>
      </div>
     <div class="col"></div>
   </div>

    <div class="row">
      <div class="col"></div>
      <div class="col-3">
        <%= f.submit 'SUBMIT', class: 'btn btn-secondary' %>
      </div>
      <div class="col-8"></div>
    </div>
  <% end %>
</div>
