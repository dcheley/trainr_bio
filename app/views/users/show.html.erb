<!doctype html>
<html lang="en">
	<head>
    <title>Profile</title>
	</head>

  <body>
		<%= render 'layouts/navbar' %>
		<div class="text-center"><%= flash[:notice] %></div>

    <div class="card-container">
	    <span class="pro">Heart<!-- <img> find heart icon --></span>
			<% if @user.img_url.blank? %>
			<%= image_tag('user.svg', class:'round', height:'220', width:'220')%>
			<% else %>
				<%= @user.img_url %>
			<% end %>
			<% if !@user.first_name.nil? || !@user.last_name.nil? %>
		    <h3><%= @user.first_name + ' ' + @user.last_name %></h3>
			<% else %>
			 <h3>N/A</h3>
			<% end %>
	    <p>Yoga Teacher</p>
			<p><%= @user.description %></p>
		  <p><%= @user.location %></p>
		  <p><%= @user.phone %></p>
			<!-- Show schedule times and days only if exist and gray out button if not -->
	    <div class="buttons">
	      <button class="primary">Check In</button>
	      <button class="primary ghost">Social</button>
	    </div>

	    <!-- add icons here from the 'check ins' -->
	    <div class="skills mt-3">
	      <p class="text-center">KNOWN FOR</p>
	      <ul>
	        <li>Yoga</li>
	        <li>Pilates</li>
	        <li>Calisthenics</li>
					<li>Relaxing</li>
	      </ul><br><br>
	    </div>

	    <!-- floating menu here -->
	    <div id="navbar">
	      <a href="#schedule">Schedule</a>
	      <a href="#history">History</a>
	      <a href="#offerings">Offerings</a>
	    </div><br><br>

	    <!-- Schedule -->
	    <div class="schedule">
				<% if current_user == @user %>
					<p><%= link_to "Create Class", new_event_url %></p>
				<% end %>
	      <p>SCHEDULE</p>
	    	<table>
	    		<thread>
	    			<tr>
	    				<th>Day</th>
	    				<th>Time</th>
	    				<th>Class Name</th>
	    				<th>Studio</th>
	    			</tr>
	    		</thread>
	    		<tbody>
						<% @events.each do |event| %>
		    			<tr>
		    				<td><%= event.date.strftime('%a %_m/%-d') %></td>
		    				<td><%= event.start_time.strftime('%l:%M%p') %></td>
		    				<td>ADDRESS</td>
		    				<td>STUDIO</td>
		    			</tr>
						<% end %>
	    		</tbody>
	    	</table>
	    </div>

	    <!-- History Timeline -->
	    <div class="timeline mt-4">
	    <h7>Timeline</h7>
	      <ul>
	        <li>
	          <div class="bulletpink"></div>
	          <div class="date">2020</div>
	          <div class="desc">
	            <h5>Started Teaching @Ahimsa</h5>
	          </div>
	        </li>
	        <li>
	          <div class="bulletgreen"></div>
	          <div class="date">2018</div>
	          <div class="desc">
	            <h5>Received Yoga Alliance Cert</h5>
	          </div>
	        </li>
	        <li>
	          <div class="bulletorange"></div>
	          <div class="date">2016</div>
	          <div class="desc">
	            <h5>RYT 200</h5>
	    				<h6>Yoga Tree</h6>
	          </div>
	        </li>
	        <li>
	          <div class="bulletgreen"></div>
	          <div class="date">2014</div>
	          <div class="desc">
	            <h5>Started Practicing Yoga</h5>
	            <h6>Youtube</h6>
	          </div>
	        </li>
	      </ul><br><br>
	    </div>

	    <!-- Offerings -->
	    <div>
	    	<h7>Offerings</h7>
	    </div><br><br>
    </div>

    <p><cite>trainr.bio 2020</cite><p>
  </body>
</html>
