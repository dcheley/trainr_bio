<%= render 'layouts/navbar_my_trainrs' %>

<div class="container text-center"><%= flash[:notice] %></div>

<div class="container">
  <div class="row text-center">
    <div class="col-1"></div>
    <div class="col-1">
      <!-- checkins -->
    </div>
    <div class="col-1"></div>
    <div class="col-1">
      <!-- pic -->
    </div>
    <div class="col-1"></div>
    <div class="col-4">
      <!-- name, location -->
    </div>
    <div class="col-1"></div>
    <div class="col-1">
      <!-- star -->
    </div>
    <div class="col-1"></div>
  </div>
</div>

<div class="container">
  <div class="row text-center">
    <% @my.trainers.each do |trainr| %>
      <div class="col-1"></div>
      <div class="col-10">
        <div class="row text-center card-my-trainr">
          <div class="col-1">
            <!-- checkins -->
          </div>
          <div class="col-1"></div>
          <div class="col-2">
            <%= link_to image_tag(trainr.img_url, class: "my-trainr-pic"), trainr.url %>
          </div>
          <div class="col-1"></div>
          <div class="col-5">
            <%= trainr.firstname %><%= trainr.lastname %>
            <br/><%= trainr.location %>
          </div>
          <div class="col-1"></div>
          <div class="col-1">
            <%= image_tag("images/star.gif", class: "star-icon") %>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    <% end %>
  </div>
</div>


<% if current_user && current_user.role == "trainer" %>
	<%= render 'layouts/footer_trainer' %>
<% else %>
	<%= render 'layouts/footer_trainee' %>
<% end %>
